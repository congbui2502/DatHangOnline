<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@color/xam"
    tools:context=".Activity.DangNhapKhachHangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:padding="70dp"
            android:layout_gravity="center"
            android:src="@drawable/pngtree_coffe"></ImageView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="20dp"

            android:textSize="25sp"

            android:drawableLeft="@drawable/iconuser"
            android:background="@drawable/edittext_style1"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Tên đăng nhập"

            ></EditText>

        <EditText
            android:id="@+id/edt_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:textSize="25sp"
            android:background="@drawable/edittext_style1"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:drawableLeft="@drawable/iconpass"
            android:hint="Mật khẩu"

            android:password="true"></EditText>

        <CheckBox
            android:id="@+id/saveUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Lưu tài khoản đăng nhập"></CheckBox>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            app:indicatorColor="@color/vang"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/rv_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:trackColor="@color/xanh" />

        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="Đăng nhập"></Button>

        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="Đăng Ký"></Button>

        <TextView
            android:id="@+id/tv_quenmk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="Quên mật khẩu?"
            android:textStyle="bold"></TextView>
    </LinearLayout>



</LinearLayout>